                </route>
        -->
                <route id="ibm-to-log">
                    <from uri="ibmmq:channel:KBNN.TO.VPB"/>
                    <log message="receive data from queue"/>
                    <to uri="log:receive-message-from-queue"/>
                </route>

                <route id="bridge-from-ibmmq-to-amq" autoStartup="false">
                    <from uri="ibmmq:channel:KBNN.TO.VPB"/>
                    <convertBodyTo type="String" charset="UTF-8"/>
                    <log message="${body} - 2 - Bridging from IBMQ to AMQ"/>
                    <to uri="activemq:VPB"/>
                </route>
        <!--
                <route id="timer-to-amq">
                    <from uri="timer:foo?period=2000"/>
                    <setBody>
                        <constant>hello test</constant>
                    </setBody>
                    <log message="${body} - AMQ == DEV-QUEUE-1"/>
                    <to uri="activemq:VPB"/>
                </route>

                <route id="amq-to-log">
                    <from uri="activemq:VPB"/>
                    <log message="receive data from queue"/>
                    <to uri="log:receive-message-from-queue"/>
                </route>
                -->

        <route id="bridge-from-amq-to-ibmmq" autoStartup="true">
            <from uri="activemq:VPB"/>
            <convertBodyTo type="String" charset="UTF-8"/>
            <log message="${body} - 1 - Bridging from AMQ to IBMQ"/>
            <to uri="ibmmq:queue:QUEUE.EXTERNAL.INBOX"/>
        </route>

    </camelContext>

</beans>